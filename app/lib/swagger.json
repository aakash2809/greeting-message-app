{
    "swagger": "2.0",
    "info": {
        "version": "4.1.6",
        "title": "Greeting Message App",
        "description": "My User Project Application API"
    },
    "host": "localhost:2000",
    "basePath": "/",
    "components": {
        "schemas": {
            "greetingSchmea": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "message": {
                        "type": "string"
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Greetings",
            "description": "API for users in the system"
        }
    ],
    "schemes": [
        "https",
        "http"
    ],
    "paths": {
        "/addGreeting": {
            "post": {
                "tags": [
                    "Greetings"
                ],
                "summary": "Add a new greeting to the greeting schema",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "message": "body",
                        "description": "greeting object that needs to be added to the greeting schema",
                        "required": true
                    }
                ],
                "schema": {
                    "$ref": "#/components/schemas/greetingSchmea"
                },
                
                "responses": {
                    "400": {
                        "description": "Bad Request ,Invalid input"
                    },
                    "500": {
                        "description": "internal server error"
                    },
                    "200": {
                        "description": " Datainserted successfully"
                    }

                    
                }
            }
        },
        "/allGreetings": {
            "get": {
                "tags": [
                    "Greetings"
                ],
                "summary": "get all greetings",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "500": {
                        "description": "internal server error"
                    },
                    "200": {
                        "description": "retirved successfully"
                    }
                }
            }
        },
        "/uniqueGreeting/{greetingId}": {
            "get": {
                "tags": [
                    "Greetings"
                ],
                "summary": "get specific greetings by greetingId",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "greetingId",
                        "type": "string",
                        "required": true
                    }
                ],
                "responses": {
                    "500": {
                        "description": "internal server error"
                    },
                    "200": {
                        "description": "retirved successfully"
                    }
                }
            }
        },
        "/updateGreeting/{greetingId}": {
            "put": {
                "tags": [
                    "Greetings"
                ],
                "summary": "update exiting greeting ",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "greetingId",
                        "description": "id that need to be updated",
                        "required": true
                    },
                    {
                        "in": "body",
                        "name": "body",
                        "message": "body",
                        "type": "string",
                        "required": true
                    }
                ],
                "responses": {
                    "404": {
                        "description": "Greeting  not found with input id"
                    },
                    "200": {
                        "description": "Greeting updated successfully with given id"
                    }
                }
            }
        },
        "/greeting/{greetingId}": {
            "delete": {
                "tags": [
                    "Greetings"
                ],
                "summary": "delete greeting ",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "greetingId",
                        "description": "id for greeting that need to be deleted",
                        "type": "string",
                        "required": true
                    }
                ],
                "responses": {
                    "404": {
                        "description": "Greeting  not found with input id"
                    },
                    "200": {
                        "description": "Greeting deleted successfully with given id"
                    }
                }
            }
        }
    }
   
}